<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/G9">

    <ImageView
        android:id="@+id/iv_result_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="17dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_color_grade_gold_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_result_grade"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="N"
        android:textAppearance="@style/WeQuizTextAppearance.Subtitle2.Bold"
        android:textColor="@color/G4"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/iv_result_grade"
        app:layout_constraintEnd_toEndOf="@id/iv_result_grade"
        app:layout_constraintStart_toStartOf="@id/iv_result_grade"
        app:layout_constraintTop_toTopOf="@id/iv_result_grade" />

    <TextView
        android:id="@+id/tv_result_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="17dp"
        android:layout_marginStart="8dp"
        android:text="매쉬업귀염둥이"
        android:textAppearance="@style/WeQuizTextAppearance.Base.Regular"
        android:textColor="@color/G2"
        app:layout_constraintBottom_toBottomOf="@id/iv_result_grade"
        app:layout_constraintStart_toEndOf="@id/iv_result_grade"
        app:layout_constraintTop_toTopOf="@id/iv_result_grade" />

    <TextView
        android:id="@+id/tv_result_hash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="17dp"
        android:layout_marginStart="10dp"
        android:text="#{고유번호}"
        android:textAppearance="@style/WeQuizTextAppearance.xs.Regular"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/iv_result_grade"
        app:layout_constraintStart_toEndOf="@id/tv_result_nickname"
        app:layout_constraintTop_toTopOf="@id/iv_result_grade" />

    <TextView
        android:id="@+id/tv_result_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginEnd="16dp"
        android:text="100점"
        android:textAppearance="@style/WeQuizTextAppearance.Subtitle2.Medium"
        android:textColor="@color/G1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>