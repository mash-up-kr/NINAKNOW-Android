<resources>

    <!-- Button -->
    <style name="WeQuizRoundButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_radius_12</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textAppearance">@style/WeQuizTextAppearance.Base.SemiBold</item>
    </style>

    <style name="WeQuizRoundButton.Disabled">
        <item name="android:backgroundTint">@color/Disabled</item>
        <item name="android:textColor">@color/G4</item>
    </style>

    <style name="WeQuizRoundButton.Default">
        <item name="android:backgroundTint">@color/P1</item>
        <item name="android:textColor">@color/G2</item>
    </style>

    <style name="WeQuizMaxButton" parent="@android:style/Widget.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">@style/WeQuizTextAppearance.Base.SemiBold</item>
    </style>

    <style name="WeQuizMaxButton.Disabled">
        <item name="android:backgroundTint">@color/Disabled</item>
        <item name="android:textColor">@color/G4</item>
    </style>

    <style name="WeQuizMaxButton.Default">
        <item name="android:backgroundTint">@color/P1</item>
        <item name="android:textColor">@color/G2</item>
    </style>

    <!-- Quiz Edit Text-->
    <style name="WeQuizQuizEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/G4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAppearance">@style/WeQuizTextAppearance.Base.Medium</item>
    </style>

    <!-- EditText -->
    <style name="WeQuizTextInputLayout" parent="Theme.MaterialComponents">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>

        <!-- background -->
        <item name="boxBackgroundColor">@color/G9</item>

        <!-- label -->
        <item name="android:textColorHint">@color/G2</item> <!-- 클릭 전 -->
        <item name="hintTextColor">@color/G2</item> <!-- 클릭 후 -->
        <item name="hintTextAppearance">@style/WeQuizTextAppearance.Caption2.Medium</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="expandedHintEnabled">false</item>

        <!-- indicator -->
        <item name="boxStrokeColor">@color/selector_text_input_layer_indicator</item>
        <item name="boxStrokeErrorColor">@color/Alert</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <!-- counter -->
        <item name="counterEnabled">true</item>
        <item name="counterTextColor">@color/white</item>
        <item name="counterTextAppearance">@style/WeQuizTextAppearance.Caption2.Regular</item>
        <item name="counterOverflowTextColor">@color/Alert</item>
    </style>

    <style name="WeQuizTextInputLayout.Clear">
        <!-- trailing icon -->
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/G2</item>
    </style>

    <style name="WeQuizTextInputLayout.Certification">
        <!-- trailing icon -->
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/btn_resend_certification</item>
    </style>

    <style name="WeQuizBasicEditText" parent="Theme.MaterialComponents">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>

        <!-- text -->
        <item name="android:textAppearance">@style/WeQuizTextAppearance.Subtitle1.Medium</item>
        <item name="android:textColor">@color/G2</item> <!-- text 컬러-->
        <item name="android:textColorHint">@color/G6</item> <!-- hint 컬러 -->

        <!-- cursor -->
        <item name="colorControlActivated">@color/P1</item> <!-- cursor 컬러 -->
        <item name="android:textColorHighlight">@color/P1</item> <!-- text 드래그 색 상-->
    </style>

</resources>
