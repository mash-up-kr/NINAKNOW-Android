<resources>

    <!-- Button -->
    <style name="WeQuizRoundButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_radius_12</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textAppearance">@style/WeQuizTextAppearance.Base.SemiBold</item>
    </style>

    <style name="WeQuizRoundButton.Disabled">
        <item name="android:backgroundTint">@color/Disabled</item>
        <item name="android:textColor">@color/G4</item>
    </style>

    <style name="WeQuizRoundButton.Default">
        <item name="android:backgroundTint">@color/P1</item>
        <item name="android:textColor">@color/G2</item>
    </style>

    <style name="WeQuizMaxButton" parent="@android:style/Widget.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">@style/WeQuizTextAppearance.Base.SemiBold</item>
    </style>

    <style name="WeQuizMaxButton.Disabled">
        <item name="android:backgroundTint">@color/Disabled</item>
        <item name="android:textColor">@color/G4</item>
    </style>

    <style name="WeQuizMaxButton.Default">
        <item name="android:backgroundTint">@color/P1</item>
        <item name="android:textColor">@color/G2</item>
    </style>

    <!-- Quiz Edit Text-->
    <style name="WeQuizQuizEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/btn_radius_16</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/G4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="WeQuizQuizEditText.Default">
        <item name="android:textAppearance">@style/WeQuizTextAppearance.Base.Medium</item>
        <item name="android:backgroundTint">@color/G7</item>
    </style>

    <style name="WeQuizQuizEditText.Selected">
        <item name="android:textAppearance">@style/WeQuizTextAppearance.Base.Medium</item>
        <item name="android:backgroundTint">@color/P1</item>
    </style>

</resources>
